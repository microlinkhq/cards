{
  "name": "@microlink/cards-app",
  "description": "The easiest way to generate dynamic social images at scale.",
  "homepage": "https://github.com/microlinkhq/cards",
  "version": "1.8.1",
  "author": {
    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "contributors": [
    {
      "name": "Kiko Beats",
      "email": "josefrancisco.verdu@gmail.com"
    },
    {
      "name": "GermanRodrickson",
      "email": "germanrodrickson@gmail.com"
    },
    {
      "name": "Pedro Duarte",
      "email": "contact@peduarte.com"
    },
    {
      "name": "Brad Adams",
      "email": "hi@breadadams.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/cards.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/cards/issues"
  },
  "keywords": [
    "cards",
    "img",
    "meta",
    "metatags",
    "microlink",
    "og-image",
    "opengraph",
    "seo",
    "share"
  ],
  "dependencies": {
    "@kikobeats/use-query-state": "~1.0.4",
    "@microlink/mql": "~0.9.3",
    "@microlink/react": "~5.5.5",
    "@monaco-editor/react": "~4.1.0",
    "@snackbar/core": "~1.7.0",
    "babel-plugin-macros": "~3.0.1",
    "cycled": "~1.2.0",
    "deep-object-diff": "~1.1.0",
    "framer-motion": "~4.0.3",
    "monaco-themes": "~0.3.3",
    "msgpack5": "~5.3.2",
    "next": "~10.1.2",
    "next-transpile-modules": "~6.3.0",
    "polished": "~4.1.1",
    "prettier": "~2.2.1",
    "react": "~17.0.2",
    "react-aspect-ratio": "~1.0.49",
    "react-dom": "~17.0.2",
    "react-json-view": "github:microlinkhq/react-json-view#feat-allow-textarea-select",
    "react-live": "~2.2.3",
    "react-loading-skeleton": "~2.2.0",
    "react-select": "~4.3.0",
    "react-tabs": "~3.2.1",
    "styled-components": "5.2.1",
    "theme-ui": "~0.6.1",
    "throttle-debounce": "~3.0.1",
    "tickedoff": "~1.0.2",
    "urlsafe-base64": "~1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "babel-plugin-styled-components": "latest",
    "conventional-github-releaser": "latest",
    "debug-logfmt": "latest",
    "download": "latest",
    "exists-file": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "make-dir": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "clean": "rm -rf node_modules",
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "dev": "NODE_ENV=development next -p 3001",
    "export": "next export",
    "generate-previews": "DEBUG=microlink-cards* node scripts/generate-previews.js",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github",
    "prerelease": "npm run update:check && npm run contributors",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "start": "next start",
    "test": "exit 0",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack"
    ],
    "*.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ]
  }
}
